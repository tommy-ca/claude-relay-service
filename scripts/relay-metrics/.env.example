# Relay metrics publisher settings
# Copy this file to .env and fill in the required values before running docker compose
RELAY_BASE_URL=https://relay.example.com
# Provide either RELAY_API_KEY or RELAY_API_ID
RELAY_API_KEY=
RELAY_API_ID=
RELAY_METRICS_PERIOD=monthly
RELAY_STATS_POLL_INTERVAL=10s

# Metrics export tuning
OTEL_PUSH_INTERVAL_MS=60000
OTEL_TIMEOUT_MS=5000

# OTLP HTTP exporter configuration for the relay publisher.
# Default points to the local Alloy collector.
OTEL_EXPORT_URL=http://alloy:4318/v1/metrics
# Optional custom headers encoded as a JSON object.
OTEL_EXPORT_HEADERS={"X-Greptime-DB-Name":"eu9m5l1a7hn3weary_change-public"}
# Optional basic auth for remote collectors (e.g., GreptimeDB).
OTEL_EXPORT_BASIC_AUTH_USERNAME=
OTEL_EXPORT_BASIC_AUTH_PASSWORD=

# Grafana Alloy container configuration
ALLOY_VERSION=latest
ALLOY_PORT=12345
ALLOY_UI_BIND_ADDRESS=127.0.0.1
ALLOY_CONFIG_PATH=./config/alloy/config.alloy
ALLOY_DATA_PATH=./data/alloy

# Grafana Alloy telemetry endpoints inside the container
ALLOY_OTLP_GRPC_ENDPOINT=0.0.0.0:4317
ALLOY_OTLP_HTTP_ENDPOINT=0.0.0.0:4318
ALLOY_PROMETHEUS_PORT=9600
ALLOY_PROM_BIND_ADDRESS=127.0.0.1
ALLOY_PROMETHEUS_ENDPOINT=0.0.0.0:9600

# GreptimeDB OTLP HTTP exporter credentials
ALLOY_GREPTIME_ENDPOINT=https://7oj75cvwcno3.us-west-2.aws.greptime.cloud/v1/otlp/
ALLOY_GREPTIME_DB_NAME=eu9m5l1a7hn3weary_change-public
ALLOY_GREPTIME_USERNAME=
ALLOY_GREPTIME_PASSWORD=
